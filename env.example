# BookSpark Environment Variables
# Copy this file to .env.local and fill in your actual values

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_CLARITY_ID=

# Search Console
NEXT_PUBLIC_GSC_VERIFICATION=

# Application Settings
NEXT_PUBLIC_APP_URL=https://bookspark.vercel.app
NEXT_PUBLIC_APP_NAME=BookSpark
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SHARE_TRACKING=true

# Development Settings (for local development only)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_ANALYTICS=false

# Build Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Deployment Information
VERCEL_URL=
VERCEL_ENV=
VERCEL_REGION=